<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:id="@+id/addnote_panel" 
              android:orientation="vertical" 
              android:layout_width="fill_parent" 
              android:layout_height="fill_parent"
              xmlns:android="http://schemas.android.com/apk/res/android">
    <com.android.hinotes.FingerPaintView
               
               android:id="@+id/scraw_content"
               android:background="@null"
               android:layout_width="fill_parent" 
               android:layout_height="fill_parent"
               android:longClickable="true"
               />
     <LinearLayout android:id="@+id/foot_btn_panel" android:layout_gravity="bottom|center" android:orientation="horizontal" android:layout_height="40dip" android:layout_width="wrap_content" >
         <Button android:id="@+id/sys_mediagallery_btn" android:background="@drawable/common_choose_picture" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dip" android:layout_marginRight="10dip" android:layout_gravity="bottom" />
         <Button android:id="@+id/camera_btn" android:background="@drawable/common_choose_camera" android:layout_width="wrap_content" android:layout_height="wrap_content"  android:layout_marginRight="10dip" android:layout_gravity="bottom" />
         <Button android:id="@+id/voice_btn" android:background="@drawable/common_choose_record"  android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="10dip" android:layout_gravity="bottom" />
         <Button android:id="@+id/video_btn" android:background="@drawable/common_take_vidicon" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="10dip" android:layout_gravity="bottom" />
         <Button android:id="@+id/face_btn" android:background="@drawable/common_choose_faces" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="5dip" android:layout_gravity="bottom" />
     </LinearLayout>
</FrameLayout>
