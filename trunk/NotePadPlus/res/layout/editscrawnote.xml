<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:id="@+id/addnote_panel" 
              android:orientation="vertical" 
              android:layout_width="fill_parent" 
              android:layout_height="fill_parent"
              xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView android:id="@+id/notifytime_text" android:textSize="13.0sp" android:textColor="#ff000000" android:layout_gravity="left" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginLeft="5.0dip" />
    <TextView android:id="@+id/notedel_prompt" android:textSize="25.0sp" android:layout_width="fill_parent" android:layout_height="fill_parent" />
    <com.android.hinotes.FingerPaintView
               android:id="@+id/scraw_content"
               android:background="@null"
               android:layout_width="fill_parent" 
               android:layout_height="fill_parent"
               android:longClickable="true"
               />
     <LinearLayout android:id="@+id/foot_btn_panel" android:layout_gravity="bottom|center" android:orientation="horizontal" android:visibility="invisible" android:layout_height="40dip" android:layout_width="wrap_content" >
         <Button android:id="@+id/sel_pen_clr" android:background="@drawable/ic_menu_colorpalette" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dip" android:layout_marginRight="15dip" android:layout_gravity="bottom" />
         <Button android:id="@+id/emboss" android:background="@drawable/ic_menu_emboss" android:layout_width="wrap_content" android:layout_height="wrap_content"  android:layout_marginRight="15dip" android:layout_gravity="bottom" />
         <Button android:id="@+id/blur" android:background="@drawable/ic_menu_blur"  android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="15dip" android:layout_gravity="bottom" />
         <Button android:id="@+id/srctop" android:background="@drawable/ic_menu_srcatop" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="15dip" android:layout_gravity="bottom" />
         <Button android:id="@+id/erase" android:background="@drawable/ic_menu_erase" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="15dip" android:layout_gravity="bottom" />
     </LinearLayout>
     
     <LinearLayout android:id="@+id/edit_panel" android:layout_gravity="bottom|center" android:orientation="horizontal" android:layout_height="40dip" android:layout_width="wrap_content" >
         <Button android:id="@+id/editnotebtn" android:background="@drawable/bigpic_crop" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dip" android:layout_marginRight="15dip" android:layout_gravity="bottom" />
     </LinearLayout>
</FrameLayout>
