<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.android.notepadplus"
      android:versionCode="1"
      android:versionName="1.0.0">
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"/>  
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.DEVICE_POWER" />
    <application android:icon="@drawable/icon" android:label="@string/app_name" android:debuggable="true" >
        <activity android:name=".NotePadPlus" android:label="@string/app_name" android:screenOrientation="portrait"  >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="com.android.notepadplus.NotePadWidgetProvider.ACTION_SHOW_ALL_NOTE" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".AddNoteActivity" android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="com.android.notepadplus.NotePadWidgetProvider.ACTION_ADD_NOTE" />
            </intent-filter>
        </activity>
        <activity android:name=".EditNoteActivity" android:screenOrientation="portrait"></activity>
        <activity android:name=".EndDateActivity" android:screenOrientation="portrait"></activity>
        <activity android:name=".NotifyDateActivity" android:screenOrientation="portrait"></activity>
        <activity android:name=".SetTagClrActivity" 
                  android:theme="@android:style/Theme.Translucent" android:screenOrientation="portrait"></activity>
        <activity android:name=".ChgPwdDlgActivity" 
                  android:label="@string/note_lock_dlg_title"
                  android:theme="@style/Theme.menu_dlg" android:screenOrientation="portrait"/>
        
        <activity android:name=".NotifyActivity" android:label="@string/note_notify_title" android:screenOrientation="portrait" />
        
        <receiver android:name=".NotePadWidgetProvider" android:label="@string/app_name" >
           <intent-filter>
             <action android:name="android.appwidget.action.APPWIDGET_UPDATE"/>
           </intent-filter>
           <meta-data android:name="android.appwidget.provider"  android:resource="@layout/notepad_widget_provider" />
        </receiver>
        <receiver android:name=".ClearNoteAlarmReceiver" >
            <intent-filter>
		       <action android:name="com.android.notepadplus.ClearNote" />
		    </intent-filter>
		</receiver>
		
		<receiver android:name=".NotifyAlarmReceiver">
		    <intent-filter>
		       <action android:name="com.android.notepadplus.NotifyALARM_ALERT" />
		       <action android:name="com.android.notepadplus.NotifyALARM_KILL"  />
		    </intent-filter>
		</receiver>
		
		<receiver android:name=".AlarmInitReceiver">
		    <intent-filter>
		       <action android:name="android.intent.action.BOOT_COMPLETED" />
		    </intent-filter>
		</receiver>
		
		<service android:name=".PlayAlarmService">
			<intent-filter>
				<action android:name="com.android.notepadplus.NotifyRing" />
				<category android:name="android.intent.category.default" />
			</intent-filter>
		</service>
		
	    <service android:name=".ScreenOrientService">
			<intent-filter>
				<action android:name="com.android.notepadplus.ScreenOrient" />
				<category android:name="android.intent.category.default" />
			</intent-filter>
		</service>
		
    </application>
    
</manifest> 